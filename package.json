{
  "name": "processbridge",
  "version": "0.1.0",
  "private": true,
  "description": "Adaptive Multi-Modal Content Processor for Neurodivergent Knowledge Workers",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:extension": "npm run dev --workspace=packages/extension",
    "dev:desktop": "npm run dev --workspace=packages/desktop",
    "build:extension": "npm run build --workspace=packages/extension",
    "build:desktop": "npm run build --workspace=packages/desktop",
    "build:all": "npm run build:extension && npm run build:desktop",
    "install:all": "npm install"
  },
  "author": "",
  "license": "MIT"
}
