{
  "name": "@processbridge/desktop",
  "version": "0.1.0",
  "private": true,
  "description": "ProcessBridge Desktop App",
  "main": "dist/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "tsc -p tsconfig.main.json && electron .",
    "build": "vite build && tsc -p tsconfig.main.json",
    "package": "npm run build && electron-builder"
  },
  "dependencies": {
    "@processbridge/shared": "*",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0"
  },
  "build": {
    "appId": "com.processbridge.desktop",
    "productName": "ProcessBridge",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*"
    ]
  }
}
